# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Database Configuration
# For local development with SQLite (default)
DATABASE_URL=sqlite:///./lemur.db

# For production with PostgreSQL
# DATABASE_URL=postgresql://lemur:lemur_password@localhost:5432/lemur_db

# S3/MinIO Configuration
# For local development with MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET_NAME=lemur-data
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# For production with AWS S3
# Leave S3_ENDPOINT_URL empty for AWS S3
# S3_ENDPOINT_URL=
# S3_BUCKET_NAME=your-production-bucket
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Authentication Settings
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Mock Mode (for testing without OpenAI)
MOCK_OPENAI=false